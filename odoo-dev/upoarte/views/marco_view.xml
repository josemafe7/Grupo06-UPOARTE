<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- Form View -->
		<record model="ir.ui.view" id="view_upoarte_marco_form">
			<field name="name">view_upoarte_marco_form</field>
			<field name="model">upoarte.marco</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="upoarte.upoarte_producto_form" />
			<field name="arch" type="xml">
			<data>
			<field name="precio" position="after">
				<group string="Producto">
              			<group col="2">
              				<field name="name" />  
             				<field name="nombre" />  
             				<field name="precio" /> 
             			</group>
             	</group>
            </field>
            </data>
			</field>
		</record>
		
		
		<record id="act_marco" model="ir.actions.act_window">
			<field name="name">Marcos</field>
			<field name="res_model">upoarte.marco</field>
			<field name="inherit_id_action" ref="act_producto" />
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem name="Ver marcos" id="marco_submenu" parent="producto_submenu"
			sequence="100" action="act_cuadro" />

	</data>
</odoo>
